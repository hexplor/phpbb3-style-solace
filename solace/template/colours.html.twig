    color: {{ current_preset.main_background }};
  }
  table.table1 thead  tr {
    border: 1px solid {{ current_preset.accent }};
  }
	table.table1 tbody tr {
		border-color: {{ current_preset.main_border_color }};
	}

	table.table1 tbody tr:hover, table.table1 tbody tr.hover {
		background-color: {{ current_preset.accent2 }};
		color: {{ current_preset.contrast }};
	}

	table.table1 td {
		color: {{ current_preset.main_text_color }};
	}

	table.table1 tbody td {
		border-top-color: {{ current_preset.main_background }};
	}

	table.table1 tbody th {
		border-bottom-color: {{ current_preset.contrast }};
		color: {{ current_preset.main_text_color }};
		background-color: {{ current_preset.main_background }};
	}

	table.info tbody th {
		color: {{ current_preset.contrast }};
	}

	/* Misc layout styles  */
	dl.details dt {
		color: {{ current_preset.contrast }};
	}

	dl.details dd {
		color: {{ current_preset.main_text_color }};
	}

	.sep {
		color: {{ current_preset.accent }};
	}

	/* Pagination  */

	.pagination li a {
		background-color: {{ current_preset.main_background }};
		border-color: {{ current_preset.main_border_color }};
		color: {{ current_preset.main_text_color }};
	}

	.pagination li.ellipsis span {
		background-color: transparent;
		color:	{{ current_preset.contrast }};
	}

	.pagination li.active span {
		background-color: {{ current_preset.accent }};
		border-color: {{ current_preset.accent }};
		color: {{ current_preset.main_background }};
	}

