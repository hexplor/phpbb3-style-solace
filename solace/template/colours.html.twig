		background-color: {{ current_preset.accent_light }};
		border-color: {{ current_preset.accent_light }};
		color: {{ current_preset.main_background }};
	}

	.pagination li.next a:before, .pagination li.previous a:before, .pagination li.page-jump a:before {
    content: "\f0c5";
    padding: 0 5px;
	}

	/* Pagination in viewforum for multipage topics */
	.row .pagination:before {
    content: "\f0c5";
    color: {{ current_preset.main_text_color }};
    padding-right: 5px;
	}

	/* Miscellaneous styles */

	.copyright {
		color: {{ current_preset.main_text_color }};
	}

	.error {
		color: {{ current_preset.error }};
	}

	div.rules {
		background-color: {{ current_preset.accent_light }};
		color: {{ current_preset.main_background }};
	}

	p.post-notice {
		background-color: {{ current_preset.accent_light }};
		background-image: none;
	}

	p.post-notice.deleted:before {
		background-image: url("{{ T_THEME_PATH }}/images/icon_topic_deleted.png");
	}

	p.post-notice.unapproved:before {
		background-image: url("{{ T_THEME_PATH }}/images/icon_topic_unapproved.gif");
	}

	p.post-notice.reported:before, p.post-notice.error:before {
		background-image: url("{{ T_THEME_PATH }}/images/icon_topic_reported.gif");
	}
  p.post-notice.deleted a, p.post-notice.reported a, p.post-notice.unapproved a {
    color: {{ current_preset.main_background }};
  }

	/* Colours and backgrounds for links.css  */

	a { color: {{ current_preset.accent }}; transition: color 0.5s ease-in-out;}
	a:hover	{ color: {{ current_preset.accent_light }}; }

	/* Links on gradient backgrounds */
	.forumbg .header a, .forabg .header a, th a {
		color: {{ current_preset.headers_text_color }};
	}

	.forumbg .header a:hover, .forabg .header a:hover, th a:hover {
		color: {{ current_preset.accent_light }};
	}

	/* Notification mark read link */
	.dropdown-extended a.mark_read {
		background-color: {{ current_preset.headers_text_color }};
	}

	/* Post body links */
	.postlink {
		border-bottom-color: {{ current_preset.accent_light }};
		color: {{ current_preset.accent_light }};
	}

	.postlink:visited {
		border-bottom-color: {{ current_preset.accent_light }};
		color: {{ current_preset.accent_light }};
	}

	.postlink:hover {
		background-color: {{ current_preset.accent2 }};
		color: {{ current_preset.accent }};
	}

	.signature a, .signature a:hover {
		background-color: transparent;
	}

	/* Back to top of page */
  a.top:before {
    content: "\f139";
    right: 10px;
    bottom: 10px;
  }

  a.top2:before {
    content: "\f139";
  }

	/* Arrow links  */
	a.arrow-up:before			{ content: "\f062"; }
	a.arrow-down:before		{ content: "\f063"; }
	a.arrow-left:before, .pagination li.previous a:before		{ content: "\f060"; }
	a.arrow-right:before, .pagination li.next a:before		{ content: "\f061"; }

	a.arrow-up:hover {
		background-color: transparent;
	}

	a.arrow-left:hover {
		color: {{ current_preset.accent_light }};
	}

	a.arrow-right:hover {
		color: {{ current_preset.accent_light }};
	}

	/* Colours and backgrounds for content.css  */
	ul.topiclist li {
		color: {{ current_preset.main_text_color }};
	}

	ul.topiclist dd {
		border-left-color: {{ current_preset.main_background }};
	}

	.rtl ul.topiclist dd {
		border-right-color: {{ current_preset.main_background }};
		border-left-color: transparent;
	}

	li.row strong {
		color: {{ current_preset.contrast }};
	}

	li.header dt, li.header dd {
		color: {{ current_preset.headers_text_color }};
	}

	/* Post body styles */
	.postbody {
		color: {{ current_preset.main_text_color }};
	}
  .post {
    border: 1px solid {{ current_preset.main_border_color }};
  }
  #topicreview .post {
    background: {{ current_preset.main_background }};
  }


	/* Content container styles */
	.content {
		color: {{ current_preset.main_text_color }};
	}

	.content h2, .panel h2 {
		color: {{ current_preset.accent }};
		border-bottom-color:  {{ current_preset.main_border_color }};
	}

	dl.faq dt {
		color: {{ current_preset.main_text_color }};
	}

	.posthilit {
		background-color: {{ current_preset.accent2 }};
		color: {{ current_preset.error }};
	}

	/* Post signature */
	.signature {
		border-top-color: {{ current_preset.main_border_color }};
	}

	/* Post noticies */
	.notice {
		border-top-color:  {{ current_preset.main_border_color }};
	}

	/* BB Code styles */
	/* Quote block */
	blockquote {
		background-color: {{ current_preset.accent2 }};
		border-color:{{ current_preset.main_border_color }};
	}
  blockquote:before {
    content: "\f10e";
  }
	.rtl blockquote {
		content: "\f10d";
	}

	blockquote blockquote {
		/* Nested quotes */
		background-color:{{ current_preset.accent2 }};
	}

	blockquote blockquote blockquote {
		/* Nested quotes */
		background-color: {{ current_preset.accent2 }};
	}

	/* Code block */
	.codebox {
		background-color: {{ current_preset.main_background }};
		border-color: {{ current_preset.main_border_color }};
	}

	.codebox p {
		border-bottom-color:  {{ current_preset.main_border_color }};
	}

	.codebox code {
		color: {{ current_preset.code }};
	}

	.syntaxbg		{ color: {{ current_preset.main_background }}; }
	.syntaxcomment	{ color: #FF8000; }
	.syntaxdefault	{ color: {{ current_preset.contrast }}0BB; }
	.syntaxhtml		{ color: {{ current_preset.contrast }}; }
	.syntaxkeyword	{ color: #007700; }
	.syntaxstring	{ color: #DD0000; }

	/* Attachments */
	.attachbox {
		background-color: {{ current_preset.main_background }};
		border-color:  {{ current_preset.main_border_color }};
	}

	.pm-message .attachbox {
		background-color: {{ current_preset.main_background }};
	}

	.attachbox dd {
		border-top-color: {{ current_preset.main_border_color }};
	}

	.attachbox p {
		color: {{ current_preset.main_text_color }};
	}

	.attachbox p.stats {
		color: {{ current_preset.main_text_color }};
	}

	.attach-image img {
		border-color: {{ current_preset.main_border_color }};
	}

	/* Inline image thumbnails */

	dl.file dd {
		color: {{ current_preset.main_text_color }};
	}

	dl.thumbnail img {
		border-color: {{ current_preset.main_text_color }};
		background-color: {{ current_preset.main_background }};
	}

	dl.thumbnail dd {
		color: {{ current_preset.main_text_color }};
	}

	dl.thumbnail dt a:hover {
		background-color: {{ current_preset.accent2 }};
	}

	dl.thumbnail dt a:hover img {
		border-color: {{ current_preset.accent_light }};
	}

