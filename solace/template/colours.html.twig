{% if saved_config %}
	{% set current_preset = saved_config.colours %}
	{% set current_config = saved_config %}
{% else %}
	{% set current_preset = config.defaults %}
	{% set current_config = config %}
{% endif %}

{% if switcher_preset_name %}
	{% set current_preset = presets[switcher_preset_name] %}
{% endif %}

{% set css %}
<style media="screen">
  {% if saved_config.general.fontsize %}
      body {
        font-size: {{ saved_config.general.fontsize }};
      }
  {% endif %}

	html, body {
		color: {{ current_preset.main_text_color }};
		background-color: {{ current_preset.main_background }};
	}

	h1 {
		color: {{ current_preset.main_background }};
	}

	h1 a {
		color: {{ current_preset.main_background }};
	}
	h1 a:hover {
		color: {{ current_preset.main_background }};
		text-decoration: none;
	}
  h3, h2 {
    color: {{ current_preset.headers_text_color }};
  }
  h3 a, h2 a {
    color: {{ current_preset.headers_text_color }};
  }
  h3 a:hover, h2 a:hover {
    text-decoration: none;
  }
	h3 span, h3 a span, h2 span, h2 a span {
		color: {{ current_preset.accent }};
	}
  .birthday-list h3, .birthday-list h3 span {
    color: {{ current_preset.headers_text_color }};
  }

	hr {
		border-color: {{ current_preset.main_border_color }};
		border-top-color: {{ current_preset.main_border_color }};
	}

	/* TopBar */
	.top-bar, #topbar, #topbar.notvisible  {
		background-color: transparent;
		transition: all 0.2s ease-in;
	}
	#topbar.visible {
		background-color: rgba(0, 3, 6, 0.65);
	}
	#topbar .top-bar-section ul li, #topbar .top-bar-section ul li a {
		background: transparent;
		font-size: 15px;
	}
	@media only screen and (min-width: 40.063em) and (max-width: 64em) {
		#topbar .top-bar.expanded, #topbar .top-bar.expanded .title-area {
			background-color: rgba(0, 3, 6, 1);
		}
		#topbar {
			padding-top: 0;
		}
	}
	@media only screen and (max-width: 40em) {
		#topbar .top-bar.expanded, #topbar .top-bar.expanded .title-area {
			background-color: rgba(0, 3, 6, 1);
		}
		#topbar.sticky, #topbar.normal {
			padding-top: 0;
		}
	}

  #phpbb .name h1 {
    font-size: {% if config.logo.fontsize %}{{ config.logo.fontsize }}{% else %}40px{% endif %};
  }

	/* MenuBar */
	#topbar .menu-bar li, #topbar .menu-bar li a {
		font-family: 'Lato', sans-serif;
		text-transform: uppercase;
		font-weight: 700;
		text-decoration: none;
	}
	#topbar .menu-bar li a span, #topbar .menu-bar li  span {
		border-bottom: 3px solid transparent;
		padding-bottom: 10px;
		transition: all 0.2s ease-in;
	}
	#topbar .menu-bar li a:hover span, #topbar .menu-bar li a.active span {
		border-bottom: 3px solid {{ current_preset.accent }};
		padding-bottom: 10px;
	}
	#topbar .menu-bar .dropdown li {
		transition: all 0.2s ease-in;
		background-color: rgba(0, 3, 6, 0.65);
		border: 0 none;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
	#topbar .menu-bar .dropdown li:hover {
		background-color: rgba(0, 3, 6, 0.55);
	}
	#topbar .menu-bar .dropdown li a:hover {
		color: {{ current_preset.accent }};
	}
	#topbar .menu-bar .dropdown {
		border: 0 none;
	}
	#topbar .menu-bar .dropdown li a {
		font-weight: 400;
	}
	#topbar .menu-bar .dropdown li.back a {
		font-weight: 300;
		color: {{ current_preset.accent }};
	}

	/* Slideshow */
	#slideshow h1 {
    font-size: {% if saved_config.slideshow.title_fontsize %}{{ saved_config.slideshow.title_fontsize }}{% else %}100px{% endif %};
		font-family: 'Lato', sans-serif;
		font-weight: 900;
	}
	#slideshow h2 {
		font-family: 'Lato', sans-serif;
		font-weight: 300;
		color: rgba(255, 255, 255, 0.8);
    {% if saved_config.slideshow.description_fontsize %}font-size: {{ saved_config.slideshow.description_fontsize }};{% endif %}
	}

	/* Footer  */
	#footer i {
		color: {{ current_preset.main_background }};
	}
	#footer .name h1 a {
		color: {{ current_preset.main_background }};
	}
	#footer h2 {
		color: {{ current_preset.main_background }};
	}
	#footer {
		color: rgba(255, 255, 255, 0.5);
	}
	#footer a {
		color: rgba(255, 255, 255, 0.5);
	}
	#footer ul i {
		color: {{ current_preset.main_background }};
	}
	#footer input {
		background: rgba(255, 255, 255, 0.3);
		color: {{ current_preset.main_background }};
	}
	#footer hr {
		border-color: rgba(255, 255, 255, 0.2);
	}

	/* Navbar */
	.callout {
		background-color: {{ current_preset.navbar_background }};
		color: {{ current_preset.navbar_text_color }};

	}
	.callout .linklist {
		margin-top: 20px;
	}
	.callout .navbar {
		padding: 0;
		margin: 0;
	}
	.callout .dropdown, .callout .dropdown a, .callout .dropdown a:hover {
		color: {{ current_preset.main_text_color }};
	}
	.callout a, .callout a:hover {
		color: {{ current_preset.navbar_text_color }};
	}
