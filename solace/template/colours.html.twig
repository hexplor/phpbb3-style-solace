		border-right-color: {{ current_preset.accent_light }};
	}

	.rtl .pollbar4 {
		border-left-color: {{ current_preset.accent_light }};
	}

	.pollbar5 {
		background-color: {{ current_preset.accent }};
		border-bottom-color: {{ current_preset.accent_light }};
		border-right-color: {{ current_preset.accent_light }};
	}

	.rtl .pollbar5 {
		border-left-color: {{ current_preset.accent_light }};
	}

	/* Poster profile block */
	.postprofile {
		color: {{ current_preset.main_text_color }};
		border-color: {{ current_preset.main_background }};
	}

	.pm .postprofile {
		border-color: {{ current_preset.main_border_color }};
	}

	.postprofile strong {
